pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo 'Clonando el repositorio desde GitHub...'
                checkout scm
            }
        }

        stage('Preparar entorno Python') {
            steps {
                echo 'Configurando entorno virtual y librerías...'
                script {
                    if (isUnix()) {
                        sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        python -m pip install --upgrade pip
                        python -m pip install -r requirements.txt
                        '''
                    } else {
                        // On Windows agents use batch commands (cmd.exe). Keep everything in one bat block
                        bat '''
                        python -m venv venv
                        call venv\\Scripts\\activate.bat
                        python -m pip install --upgrade pip
                        python -m pip install -r requirements.txt
                        '''
                    }
                }
            }
        }

        stage('Generar Datos') {
            steps {
                echo 'Ejecutando generación de datos simulados...'
                script {
                    if (isUnix()) {
                        sh 'python3 scripts/3_Generar_Data_Turismo.py'
                    } else {
                        bat 'python scripts\\3_Generar_Data_Turismo.py'
                    }
                }
            }
        }

        stage('Proceso ETL') {
            steps {
                echo 'Ejecutando limpieza y transformación...'
                script {
                    if (isUnix()) {
                        sh 'python3 scripts/5_Proceso_ETL.py'
                    } else {
                        bat 'python scripts\\5_Proceso_ETL.py'
                    }
                }
            }
        }

        stage('Cargar en MongoDB') {
            steps {
                echo 'Cargando datos en MongoDB...'
                script {
                    if (isUnix()) {
                        sh 'python3 scripts/6_Loading_MongoDB.py'
                    } else {
                        bat 'python scripts\\6_Loading_MongoDB.py'
                    }
                }
            }
        }

        stage('Generar Reportes') {
            steps {
                echo 'Creando gráficos y reportes...'
                script {
                    if (isUnix()) {
                        sh 'python3 scripts/7_Reportes.py'
                    } else {
                        bat 'python scripts\\7_Reportes.py'
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completado con éxito: todo el flujo ETL se ejecutó correctamente.'
        }
        failure {
            echo 'Error en la ejecución del pipeline. Revisar logs en la consola de Jenkins.'
        }
    }
}
